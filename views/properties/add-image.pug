extends ../layout/admin


block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block content

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estate

        h2.text-center.text-2xl.font-extrabold= page

        if errors
            .max-w-md.mx-auto.my-10
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div( class="md:px-10" ).bg-white.shadow.py-8.px-3.rounded.mx-auto.max-w-4xl.my-10
            form( id="image" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/properties/add-image/${property.id}` ).space-y-8
                input( type="hidden" name="_csrf" value=csrfToken )


            button(id="publish" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="button") Publish Property

block scripts
    script(src="/js/addImage.js")