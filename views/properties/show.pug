extends ../layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content

    //- pre= JSON.stringify(property, undefined, 2)

    div(class="py-5")
        h1(class="text-4xl my-10 font-extrabold text-center")= property.title

        div
            a(href="#" class="font-bold text-gray-600 text-sm") Category: 
                span(class="font-normal")= property.category.name

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg")
                img(src=`/uploads/${property.image}`, alt='property image')

                div(class="px-5 py-10 space-y-5")
                    p= property.description

                    h2(class="text-2xl leading-6 font-bold text-gray-900") Property Information

                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray-600 font-bold text-xs") Toilets
                            span(class="text-gray-800 block text-lg")= property.toilets

                        p(class="text-gray-600 font-bold text-xs") Bedrooms
                            span(class="text-gray-800 block text-lg")= property.bedrooms

                        p(class="text-gray-600 font-bold text-xs") Parking
                            span(class="text-gray-800 block text-lg")= property.parking

                        p(class="text-gray-600 font-bold text-xs") Price
                            span(class="text-gray-800 block text-lg")= property.price.name

            aside(class="md:w-1/3 bg-white shadow rounded-lg")
                h3(class="text-center py-10 leading-6 text-2xl font-bold text-gray-900") Location

                div(class="h-96" id="map")
                    p(id="lat" class="hidden")= property.lat
                    p(id="lng" class="hidden")= property.lng

                div(class="p-5")
                    p(class="text-gray-600 font-bold text-xs") Address
                        span(id="street" class="text-gray-800 block text-lg")= property.street ? property.street : 'Without Address'


                    if !isSeller

                        h3(class="text-2xl text-center my-10 font-extrabold text-gray-900") Seller

                        if sent
                            p(class="p-2 text-center bg-green-100 text-green-600 uppercase font-bold") Message sent successfully

                        else if user

                            if errors
                                .max-w-md.mx-auto.my-10
                                    each error in errors
                                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

                            form(method="POST")
                                input(type="hidden" name="_csrf" value=csrfToken)

                                div(class="space-y-5")
                                    label(for="message" class="font-medium") Message
                                    textarea(id="message" class="w-full p-2 border border-gray-300 rounded-lg shadow placeholder-gray-400" name="message" placeholder="Place your message here")

                                    input(type="submit" value="Send Message" class="bg-indigo-600 hover:bg-indigo-500 text-white font-bold uppercase text-sm w-full p-2 cursor-pointer rounded-lg")

                        else
                            div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") If you want to contact the seller 
                                a(class="text-indigo-600" href="/auth/register") you must create an account


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/showMap.js")